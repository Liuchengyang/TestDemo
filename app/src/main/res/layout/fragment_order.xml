<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="400dp">

    <ImageView
        android:id="@+id/order_mine_ph_noitems_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/mine_ph_noitems"/>
    <TextView
        android:id="@+id/order_mine_ph_noitems_text_one"
        android:layout_below="@+id/order_mine_ph_noitems_img"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="10sp"
        android:text="还没有投资任何项目"/>
    <TextView
        android:id="@+id/order_mine_ph_noitems_text_two"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/order_mine_ph_noitems_text_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="一分钟认证,做新锐互联网公司股东"/>
    <Button
        android:layout_below="@+id/order_mine_ph_noitems_text_two"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:background="#dd214084"
        android:textColor="#dddddd"
        android:textSize="12sp"
        android:text="认证和投人"/>

</RelativeLayout>