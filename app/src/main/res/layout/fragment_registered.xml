<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="注册成为36氪用户,即享一站式创业服务"
        android:textSize="11sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/registered_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="+86"
            android:textColor="#3072dc" />

        <TextView
            android:id="@+id/registered_string_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/registered_number_text"
            android:text="|" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/registered_string_text"
            android:hint="手机号"
            android:textSize="12sp" />

    </RelativeLayout>

    <Button

        android:id="@+id/btn_get_sure"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:text="获取验证码"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="11sp"
        android:gravity="center"
        android:text="注册代表你同意" />

    <TextView
        android:id="@+id/tv_agreement"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="36氪网络使用协议和隐私条款"
        android:textSize="11sp"
        android:textColor="#3072dc" />


</LinearLayout>