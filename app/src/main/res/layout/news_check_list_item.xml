<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_check_img"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:background="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/item_check_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/item_check_img"
        android:lines="2"
        android:textSize="12sp"
        android:text="dd"/>

    <TextView
        android:id="@+id/item_check_name"
        android:layout_toRightOf="@+id/item_check_img"
        android:layout_below="@+id/item_check_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:text="于洋"/>

    <TextView
        android:id="@+id/item_check_time"
        android:layout_toRightOf="@+id/item_check_name"
        android:layout_below="@+id/item_check_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:textSize="10sp"
        android:text="9月21日"/>

</RelativeLayout>